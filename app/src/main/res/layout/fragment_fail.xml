<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="太可惜了\n下次再試試看吧!"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/level_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="總共答錯"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="120dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/level_start"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/level_start"
        app:layout_constraintBottom_toBottomOf="@id/level_start"/>

    <TextView
        android:id="@+id/level_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/5題"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/center"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/level_start" />



    <TextView
        android:id="@+id/award"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="獲得"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="150dp"
        app:layout_constraintTop_toBottomOf="@id/level_start"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/award_contnet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/award"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/award"
        app:layout_constraintBottom_toBottomOf="@id/award"/>

    <TextView
        android:id="@+id/receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收下你的獎勵吧!"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/award"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/back"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="獲取獎勵"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>